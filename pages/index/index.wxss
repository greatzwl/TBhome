page{
  background-color: #f5f5f5;
}
.All_w_image{
  display:block;
  width:100%;
}
/* 全局类end */
/* 轮播图start */
.autoimageBox{
  position: relative;
  width: 100%;
}
.autoimage{
width: 100%;
height: 234.38rpx;
}
.autoimageBox>.All_w_image{
  position: absolute;
  left: 0;
  bottom: 0;
}
.autoimageBox .indicatorBox{
  position: absolute;
  bottom: 20rpx;  
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  border: 1px solid black;
}
.autoimageBox .indicator-dots{
  margin: 0 10rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid black;
  border-radius: 50%;
}
.autoimageBox .indicator-dots.active{
  background-color: #ff5000;
}
/* 轮播图end */
/* 滚动start */
.scrollBox{
  background-color: #fff;
  width: 100%;
}
.scrollBox2{
  width:200%;
  display: flex;
  flex-wrap: nowrap;
}
.scrollBox2>view{
  width:10%;
  flex:0;
}
.scrollBox2>view>view{
  width: 150rpx;
  text-align: center;
}
.scroll_s{
  width: 200rpx;
  height: 20rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  border: 1px solid black;
  background-color: rgba(255, 255, 255, 0.5);
  position: relative
}
.scroll_s>.scroll{
  width: 50%;
  height: 100%;
  position: relative;
  left: 0;
  top: 0;
  border-radius: 10rpx;
  background-color: #ff5000;
}

.recommendBox{
  width: 100%;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: #fff;
  overflow: hidden;
}
.recommendBox>.recommed{
  width: 50%;
  float: left;
}
.recommendBox>.recommed .title{
  float: left;
  width: 50%;
}
.recommendBox>.recommed .samll{
  width: 100%;
  display: flex;
  font-size: 26rpx;
}
.recommendBox>.recommed .samll_box{
  width: 50%;
}




